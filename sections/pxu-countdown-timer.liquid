{%- liquid
  assign heading = section.settings.heading
  assign section_height = section.settings.section_height
  assign image = section.settings.image
  assign image_overlay_color = section.settings.image_overlay_color
  assign image_overlay_color_alpha = image_overlay_color | color_extract: 'alpha'
  assign image_overlay_opacity = section.settings.image_overlay_opacity | divided_by: 100.0
-%}

<section
  id="{{ section.id }}"
  class="
    pxu-section
    pxu-countdown-timer
    pxu-countdown-timer--{{ section_height }}
    {% if image == blank and section_height == 'adapt' %}
      pxu-countdown-timer--adapt-no-background
    {% endif %}
  "
  style="
    --pxu-section-text-color: {{ section.settings.text_color }};
    --pxu-section-margin-top: {{ section.settings.margin_top }}px;
    --pxu-section-margin-bottom: {{ section.settings.margin_bottom }}px;
    --pxu-section-image-aspect-ratio: {{ image.aspect_ratio | default: 'auto' }};
    {% if image_overlay_color_alpha != 0 %}
      --pxu-section-image-overlay-color: {{ image_overlay_color | color_modify: 'alpha', image_overlay_opacity }};
    {% endif %}
  "
  data-pxu-countdown-timer
>
  <script
    type="application/json"
    data-component-data
  >
    {
      "id": "{{ section.id }}",
      "handle": "pxu-countdown-timer",
      "className": "CountdownTimerSection",
      "name": "Countdown timer",
      "version": "1.0.2",
      "scriptsUrl": "{{ 'scripts.js' | asset_url | replace: '/assets/', '/compiled_assets/' }}"
    }
  </script>

  {%- if image -%}
    <div class="pxu-countdown-timer__image-wrapper">
      {{- image | image_url: width: 1800 | image_tag: class: 'pxu-countdown-timer__image' -}}
    </div>
   {%- endif -%}

  <div
    class="
      pxu-countdown-timer__container
      {% if section.blocks.size == 1 -%}
        pxu-countdown-timer__container--centered
      {% endif -%}
      pxu-section__container
    "
  >
    {%- for block in section.blocks -%}
      <div
        class="
          pxu-countdown-timer__block
          pxu-countdown-timer__block--{{ block.type }}
        "
        {{ block.shopify_attributes }}
      >
        {%- case block.type -%}
          {%- when 'timer' -%}
            {%- capture datetime -%}
              {{- block.settings.countdown_year | append: '-' -}}
              {{- block.settings.countdown_month | append: '-' -}}
              {{- block.settings.countdown_day | append: 'T' -}}
              {{- block.settings.countdown_hour | append: ':' -}}
              {{- block.settings.countdown_minute | append: ':00.000' -}}
            {%- endcapture -%}

            {%- liquid
              assign timezone = datetime | date: "%z"
              assign datetime = datetime | append: timezone
              assign countdown_message = block.settings.countdown_message
              assign countdown_opacity = block.settings.countdown_opacity | divided_by: 100.0
              assign countdown_text_color = block.settings.countdown_text_color
              assign countdown_background_color = block.settings.countdown_background_color
            -%}

            <div
              class="
                pxu-countdown-timer__countdown
                pxu-countdown-timer__countdown--loading
                pxu-countdown-timer__countdown--{{ block.settings.countdown_style }}
                pxu-countdown-timer__countdown--hide-on-complete-{{ block.settings.countdown_timer_complete }}
              "
              style="
                  --pxu-section-countdown-text-color: {{ countdown_text_color }};
                  --pxu-section-countdown-text-color-alpha-10: {{ countdown_text_color | color_modify: 'alpha', 0.10 }};
                  --pxu-section-countdown-background-color: {{ countdown_background_color }};
                  --pxu-section-countdown-background-color-alpha: {{ countdown_background_color | color_modify: 'alpha', countdown_opacity }};
                "
              data-pxu-countdown-timer-countdown
            >
              <div class="pxu-countdown-timer__countdown-items">
                <time
                  class="
                    pxu-countdown-timer__countdown-datetime
                    pxu-visually-hidden
                  "
                  datetime="{{ datetime }}"
                  data-pxu-countdown-timer-countdown-datetime
                >
                </time>

                {%- for i in (1..4) -%}
                  {%- capture time_cycle -%}
                    {%- cycle 'days', 'hours', 'minutes', 'seconds' -%}
                  {%- endcapture -%}

                  <div
                    class="
                      pxu-countdown-timer__countdown-item
                      pxu-countdown-timer__countdown-item--{{- time_cycle -}}
                    "
                  >
                    <h3
                      class="pxu-countdown-timer__countdown-item-heading"
                      data-pxu-countdown-timer-countdown-{{- time_cycle -}}
                    >
                    </h3>

                    <span class="pxu-countdown-timer__countdown-item-text">
                      {{- time_cycle -}}
                    </span>
                  </div>
                {%- endfor -%}
              </div>

              {%- if countdown_message != blank -%}
                <div class="pxu-countdown-timer__countdown-message pxu-rte">
                  {{- countdown_message -}}
                </div>
              {%- endif -%}
            </div>

          {%- when 'content' -%}
            {%- liquid
              assign heading = block.settings.heading
              assign text = block.settings.text
              assign button_label = block.settings.button_label | escape
              assign button_url = block.settings.button_url
              assign button_style = block.settings.button_style
              assign button_text_color = block.settings.button_text_color
              assign button_background_color = block.settings.button_background_color

              assign button_brightness = button_background_color | color_brightness
              assign button_brightness_mod = 'light-on-dark'
              if button_brightness > 127.5
                assign button_brightness_mod = 'dark-on-light'
              endif
            -%}

            <div
              class="pxu-countdown-timer__content"
              style="
                --pxu-section-block-heading-size: {{ block.settings.heading_size }}px;
                --pxu-section-block-heading-size-mobile: {{ block.settings.heading_size_mobile }}px;
                --pxu-section-block-text-size: {{ block.settings.text_size }}px;
                --pxu-section-block-text-size-mobile: {{ block.settings.text_size_mobile }}px;
                --pxu-section-block-content-alignment: {{ block.settings.content_alignment }};
                --pxu-section-block-content-alignment-mobile: {{ block.settings.content_alignment_mobile }};
              "
            >
              {%- if heading != blank -%}
                <h2 class="pxu-countdown-timer__heading pxu-heading">
                  {{- heading -}}
                </h2>
              {%- endif -%}

              {%- if text != blank -%}
                <div class="pxu-countdown-timer__text pxu-rte">
                  {{- text -}}
                </div>
              {%- endif -%}

              {%- if button_label != blank -%}
                <a
                  class="
                    pxu-countdown-timer__button
                    pxu-btn
                    pxu-btn--{{ button_style }}
                    pxu-btn--{{ button_brightness_mod }}
                  "
                  style="
                    --pxu-btn-background-color: {{ button_background_color }};
                    --pxu-btn-text-color: {{ button_text_color }};
                  "
                  {% if button_url != blank %}
                    href="{{ button_url }}"
                  {% endif %}
                >
                  {{- button_label -}}
                </a>
              {%- endif -%}
            </div>
        {%- endcase -%}
      </div>
    {%- endfor -%}
  </div>
</section>

